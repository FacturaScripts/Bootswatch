<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="theme" title="bootswatch-themes" numcolumns="12" icon="fa-puzzle-piece fa-lg">
            <column name="name" display="none" order="0">
                <widget type="text" fieldname="name" readonly="true" required="true" />
            </column>
            <column name="theme" numcolumns="3" order="100">
                <widget type="select" fieldname="theme">
                    <values title="Bootstrap">bootstrap</values>
                    <values title="Cerulean">cerulean</values>
                    <values title="Cosmo">cosmo</values>
                    <values title="Cyborg">cyborg</values>
                    <values title="Darkly">darkly</values>
                    <values title="Flatly">flatly</values>
                    <values title="Journal">journal</values>
                    <values title="Litera">litera</values>
                    <values title="Lumen">lumen</values>
                    <values title="Lux">lux</values>
                    <values title="Materia">materia</values>
                    <values title="Minty">minty</values>
                    <values title="Pulse">pulse</values>
                    <values title="Sandstone">sandstone</values>
                    <values title="Simplex">simplex</values>
                    <values title="Sketchy">sketchy</values>
                    <values title="Slate">slate</values>
                    <values title="Solar">solar</values>
                    <values title="Spacelab">spacelab</values>
                    <values title="Superhero">superhero</values>
                    <values title="United">united</values>
                    <values title="Yeti">yeti</values>
                </widget>
            </column>
            <column name="navbar-theme" numcolumns="3" order="100">
                <widget type="select" fieldname="navbar-theme">
                    <values title="Dark">navbar-dark bg-dark</values>
                    <values title="Primary">navbar-dark bg-primary</values>
                    <values title="Light">navbar-light bg-light</values>
                </widget>
            </column>
        </group>
    </columns>
</view>
